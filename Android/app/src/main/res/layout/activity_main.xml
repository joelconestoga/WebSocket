<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.joel.wsocketclient.MainActivity">

    <Button
        android:id="@+id/btnConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/cardView"
        android:layout_alignRight="@+id/cardView"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:text="Connect" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="176dp"
        android:layout_above="@id/btnConnect"
        android:id="@+id/cardView" >

        <ScrollView
            android:id="@+id/scvScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/txvLog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </ScrollView>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btnListFiles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnConnect"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@+id/btnConnect"
        android:layout_toStartOf="@+id/btnConnect"
        android:layout_below="@+id/cardView"
        android:text="List Files" />

    <Button
        android:id="@+id/btnDisconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnListFiles"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@+id/btnListFiles"
        android:layout_toStartOf="@+id/btnListFiles"
        android:layout_below="@id/cardView"
        android:text="Disconnect" />

</RelativeLayout>
